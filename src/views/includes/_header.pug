header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if isAuthenticated
            a#logoutBtn.nav__el.nav__el--logout Log out
            a.nav__el(href='/dashboard')
                img.nav__user-img(src=`${user.avatar && user.avatar !== '' ? user.avatar : '/img/users/default.jpg'}` alt=`Photo of ${user.username}`)
                span= user.email && user.email
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign up